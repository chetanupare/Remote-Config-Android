<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:fab="http://schemas.android.com/apk/res-auto"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.goclever.remoteads.MainActivity">

	<LinearLayout
		android:layout_marginTop="20dp"
		android:layout_width="wrap_content"
		android:layout_height="180dp"
		android:orientation="horizontal"
		android:id="@+id/product1">

	<ImageView
		android:layout_width="180dp"
		android:layout_height="180dp"
		android:layout_above="@+id/txt"
		android:contentDescription="@string/app_name"
		android:src="@drawable/nike_product"/>


<RelativeLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<TextView
		android:id="@+id/txtp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:textAppearance="@style/TextAppearance.AppCompat.Large"
		android:text="Nike Air Shoe"/>

		<TextView
		android:id="@+id/txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="70dp"
		android:paddingBottom="9dp"
		android:paddingTop="9dp"
			android:textSize="15dp"
			android:textColor="#1967D2"
			android:textStyle="bold"
		android:text="Nike Air Shoe"/>
		<Button
			android:id="@+id/btn"
			android:layout_width="180dp"
			android:layout_height="40dp"
			android:layout_below="@+id/txt"
			android:text="@string/fetch" />
</RelativeLayout>

	</LinearLayout>
	<LinearLayout
		android:layout_marginTop="20dp"
		android:layout_width="wrap_content"
		android:layout_height="180dp"
		android:orientation="horizontal"
		android:layout_below="@+id/product1">

		<ImageView
			android:layout_width="180dp"
			android:layout_height="180dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:layout_above="@+id/txt"
			android:contentDescription="@string/app_name"
			android:src="@drawable/rebook"/>


		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/txtp2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:textAppearance="@style/TextAppearance.AppCompat.Large"
				android:text="Rebook Shoe"/>

			<TextView
				android:id="@+id/txt1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="70dp"
				android:paddingBottom="9dp"
				android:paddingTop="9dp"
				android:textSize="15dp"
				android:textColor="#1967D2"
				android:textStyle="bold"
				android:text="Nike Air Shoe"/>
			<Button
				android:id="@+id/btn2"
				android:layout_width="180dp"
				android:layout_height="40dp"
				android:layout_below="@+id/txt1"
				android:text="@string/fetch" />
		</RelativeLayout>

	</LinearLayout>
	<com.getbase.floatingactionbutton.FloatingActionButton
		android:id="@+id/pink_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		fab:fab_icon="@drawable/ic_git"
		fab:fab_colorNormal="#FFF"
		fab:fab_colorPressed="#1967D2"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="16dp"/>

</RelativeLayout>